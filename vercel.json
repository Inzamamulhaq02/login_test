{
  "version": 2,
  "builds": [
    { "src": "Dockerfile", "use": "vercel/docker" } // Use 'vercel/docker' directly
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "gold.settings",
    "PYTHONUNBUFFERED": "1",
    "DATABASE_URL": "your_database_url_here" // Ensure your DB URL is set here
  }
}
